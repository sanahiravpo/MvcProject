@model List<MvcProject.Models.Entities.Student>
<h1>Students</h1>
<table  class="table">
    <thead>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>age</th>
            <th>Email</th>
            <th>Phone</th>
         <th> </th>
           
         
          
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model)
        {
            <tr>
                <td>@student.id</td>
                <td>@student.name</td>
                <td>@student.age</td>
                <td>@student.email</td>
                <td>@student.phone</td>
            <td>
                <a  class="btn btn-primary"  asp-controller="Students" asp-action="Edit" asp-route-id="@student.id">edit</a>
            </td>

              
               
            </tr>
        }
    </tbody>
</tabl>